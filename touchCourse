#pragma config(Sensor, S1,     touchSensor,    sensorTouch)
#pragma config(Motor,  motorA,          leftMotor,     tmotorNXT, PIDControl, encoder)
#pragma config(Motor,  motorB,           ,             tmotorNXT, openLoop)
#pragma config(Motor,  motorC,          rightMotor,    tmotorNXT, PIDControl, encoder)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

task main()
{
	//Declaraions
	int speed = random(50); 			// set motorC to a random number in the range: [min, max]
	int count = 0;

	nxtDisplayTextLine(0, "Test %d", speed);
	//Code Body

			while(count < 4){
			while (SensorValue(touchSensor) == 0){
				motor[leftMotor] = speed;
				motor[rightMotor] = speed;
			}

			motor[leftMotor] = 0;
			motor[rightMotor] = 0;

			nMotorEncoder[motorA] = 0;
			nMotorEncoder[motorC] = 0;

			while(nMotorEncoder[motorA] > -300){
				motor[motorA] = -50;
		}
		count++;

		nMotorEncoder[motorA] = 0;
		nMotorEncoder[motorC] = 0;

		nMotorEncoderTarget[motorA] = 720;
		nMotorEncoderTarget[motorC] = 720;

		motor[leftMotor] = speed;
		motor[rightMotor] = speed;

		while(nMotorRunState[motorC] !=runStateIdle)
				{ }
		motor[leftMotor] = 0;
		motor[rightMotor] = 0;
	}
	}

