import requests
from bs4 import BeautifulSoup

__author__ = "Seamus de Cleir"

"""
Program to retrieve price of a chair using Beautiful soup
"""
# Requests the page and saves to variable
request = requests.get("http://www.ikea.com/ie/en/products/chairs-stools-benches/chairs/"
                       "ingolf-chair-white-art-70103250/")

# Saves the page content to content variable
content = request.content

# Parses the content to make it readable as html
soup = BeautifulSoup(content, "html.parser")

# Searches span tags for "itemprop : price" and returns value to variable
element = soup.find("span", {"itemprop": "price"})

# Saves value as float - strip removes white space
starting_price = float(element.text.strip())

print(starting_price)

# <span itemprop="price">50.00</span>
